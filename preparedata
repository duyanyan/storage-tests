[cnv-qe-jenkins@cnv-executor-ginger54 storage-tests]$ cat vm1
apiVersion: kubevirt.io/v1alpha3
kind: VirtualMachine
metadata:
  name: vm1
spec:
  template:
    spec:
      domain:
        resources:
          requests:
            memory: 512M
        devices:
          rng: {}
          disks:
          - disk:
              bus: virtio
            name: dv1
      volumes:
      - name: dv1
        dataVolume:
          name: dv1
  running: true
